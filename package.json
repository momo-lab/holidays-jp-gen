{
  "name": "holidays-jp-gen",
  "version": "0.3.0",
  "description": "A CLI tool to generate lightweight TypeScript holiday data modules for Japan based on official government CSV data.",
  "repository": "github:momo-lab/holidays-jp-gen",
  "bugs": {
    "url": "https://github.com/momo-lab/holidays-jp-gen/issues"
  },
  "author": "momo-lab <momotaro.n@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "lint": "run-s -c lint:*",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "eslint --fix .",
    "lint-fix:prettier": "prettier --write .",
    "test": "vitest run",
    "test-watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "holidays-jp-gen": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "japan",
    "holiday",
    "japanese-holidays",
    "generator",
    "cli",
    "typescript"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "csv-parse": "^5.4.0",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.0.14",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-sort-package-json": "^1.1.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  }
}
