{
  "name": "holidays-jp-gen",
  "version": "0.2.1",
  "description": "A CLI tool to generate lightweight TypeScript holiday data modules for Japan based on official government CSV data.",
  "repository": "github:momo-lab/holidays-jp-gen",
  "bugs": {
    "url": "https://github.com/momo-lab/holidays-jp-gen/issues"
  },
  "author": "momo-lab <momotaro.n@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/cli.js",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write .",
    "test": "pnpm run test:gen && vitest run",
    "test:gen": "pnpm run build && node ./dist/cli.js --year 2024 --output test/holidays-jp.ts",
    "test:watch": "vitest"
  },
  "bin": {
    "holidays-jp-gen": "./dist/cli.js"
  },
  "main": "index.js",
  "keywords": [
    "japan",
    "holiday",
    "japanese-holidays",
    "generator",
    "cli",
    "typescript"
  ],
  "dependencies": {
    "commander": "^11.0.0",
    "csv-parse": "^5.4.0",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sort-package-json": "^1.1.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  }
}
